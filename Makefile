.PHONY: all clean fclean re make

NAME = webserv

#//////////////////////////////////////////////////////////////////////////////
#		ALL FILES
#//////////////////////////////////////////////////////////////////////////////

SRCS =	src/main.cpp		src/server.cpp

HEAD =	include/server.hpp

#//////////////////////////////////////////////////////////////////////////////
#		COMMAND SHORTCUTS
#//////////////////////////////////////////////////////////////////////////////

CC = c++
CF = -Wall -Wextra -Werror -std=c++98 -pedantic -g

RM = rm -rf

#//////////////////////////////////////////////////////////////////////////////
#		RULES
#//////////////////////////////////////////////////////////////////////////////

all: ${NAME}

# Binary creation

${NAME}: ${SRCS} ${HEAD}
	${CC} ${CF} ${SRCS} -o ${NAME}

# Mandatory rules

clean:
	${RM}

fclean: clean
	${RM} ${NAME}

re: fclean all